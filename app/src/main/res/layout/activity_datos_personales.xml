<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEDE0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con botón de regreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Datos Personales"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1C1C3C"
                android:gravity="center" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgPerfilDatos"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/usuario"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Foto de perfil" />

        <!-- Card con información del usuario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre completo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando..."
                    android:textSize="16sp"
                    android:textColor="#1C1C3C"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Correo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ejemplo@correo.com"
                    android:textSize="16sp"
                    android:textColor="#1C1C3C"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Teléfono -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No registrado"
                    android:textSize="16sp"
                    android:textColor="#1C1C3C"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Tipo de productor -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de productor"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTipoProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No especificado"
                    android:textSize="16sp"
                    android:textColor="#1C1C3C"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card con información de la cuenta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información de la cuenta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C3C"
                    android:layout_marginBottom="12dp" />

                <!-- Fecha de registro -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de registro"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFechaRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textSize="16sp"
                    android:textColor="#1C1C3C"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
