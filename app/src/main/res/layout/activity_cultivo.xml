<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_verde_beige">

    <LinearLayout
        android:id="@+id/linearLayoutCultivos"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloCultivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Cultivos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1C352D"
            android:layout_marginBottom="24dp"/>

        <!-- Los cultivos se agregarán dinámicamente aquí -->

        <!-- Botón Agregar Cultivo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarCultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Cultivo"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:backgroundTint="#1C352D"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>