<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="54dp"
        android:paddingHorizontal="16dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo de Sensores"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos en tiempo real"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp"/>

        <!-- Estado general -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEstadoGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEstadoGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… TODOS LOS SISTEMAS NORMALES"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkGreen"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSensoresActivos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 sensores activos"
                        android:textSize="12sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/tvUltimaActualizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ãšltima actualizaciÃ³n: --:--"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de gestiÃ³n de sensores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarSensor"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="âž• Agregar Sensor"
                android:textSize="13sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarSensor"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="ðŸ—‘ï¸ Eliminar Sensor"
                android:textSize="13sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:enabled="false"/>
        </LinearLayout>

        <!-- Lecturas actuales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecturas Actuales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"
            android:layout_marginBottom="12dp"/>

        <!-- Contenedor dinÃ¡mico -->
        <LinearLayout
            android:id="@+id/sensoresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los datos se actualizan automÃ¡ticamente cada 5 segundos"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>