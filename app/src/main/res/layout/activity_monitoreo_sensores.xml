<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="54dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoreo de Sensores"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos en tiempo real"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEstadoGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEstadoGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… TODOS LOS SISTEMAS NORMALES"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkGreen"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSensoresActivos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 sensores activos"
                        android:textSize="12sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/tvUltimaActualizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ãšltima actualizaciÃ³n: --:--"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizarSensores"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ”„ Actualizar"
                android:textSize="12sp"
                android:backgroundTint="@color/lightGreen"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHistorial"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“Š Historial"
                android:textSize="12sp"
                android:backgroundTint="@color/darkGreen"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlertas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ”” Alertas"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecturas Actuales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"
            android:layout_marginBottom="12dp"/>
        
        <LinearLayout
            android:id="@+id/sensoresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Los sensores se agregarÃ¡n dinÃ¡micamente aquÃ­ -->
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los datos se actualizan automÃ¡ticamente cada 5 segundos"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>