<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEDE0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/usuario"
            android:padding="16dp"
            android:contentDescription="Foto de perfil" />

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nombre Usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1C1C3C" />

        <!-- Línea divisora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#1C1C3C" />

        <!-- Opciones del menú -->
        <TextView
            android:id="@+id/btnDatosPersonales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Personales"
            android:textColor="#1C1C3C"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificaciones"
            android:textColor="#1C1C3C"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnIdioma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idioma"
            android:textColor="#1C1C3C"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnSincronizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sincronización de sensores"
            android:textColor="#1C1C3C"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="#8B0000"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>