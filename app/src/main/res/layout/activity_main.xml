<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ± SmartAgro Dashboard"
            android:textColor="#1C352D"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Indicadores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#A6B28B"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:radius="12dp">

            <TextView
                android:id="@+id/txtHumedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C352D"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txtTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C352D"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txtFertilizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1C352D"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Alertas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Alertas recientes"
            android:textColor="#1C352D"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/txtAlertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5C9B0"
            android:textColor="#1C352D"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Sensores -->
        <TextView
            android:id="@+id/txtSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1C352D"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Recomendaciones -->
        <TextView
            android:id="@+id/txtRecomendacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A6B28B"
            android:textColor="#1C352D"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>
