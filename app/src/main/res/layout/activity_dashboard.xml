<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_dashboard"
    tools:context=".Dashboard">

    <!-- ðŸŒ± Tarjeta principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="16dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- ðŸŒ¿ TÃ­tulo de bienvenida -->
            <TextView
                android:id="@+id/txtBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="Bienvenido a AgroSmart "
                android:textColor="@color/darkGreen"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- ðŸŒ¾ BotÃ³n Cultivos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCultivos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/lightGreen"
                android:text=" Ver Cultivos"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <!-- ðŸ“Š BotÃ³n Sensores -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSensores"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/lightGreen"
                android:text=" Ver Sensores"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <!-- ðŸš¨ BotÃ³n Alertas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlertas"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/lightGreen"
                android:text=" Ver Alertas"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Espacio flexible para que el logo quede abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ðŸŒ¿ Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="274dp"
        android:layout_height="333dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:contentDescription="Logo de AgroSmart"
        android:src="@drawable/logo1" />

</LinearLayout>
